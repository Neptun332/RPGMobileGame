<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    app:cardCornerRadius="16dp">


    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/background_texture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/forrest2" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/adventure_difficulty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/adventure_name"
            android:layout_alignParentEnd="true"
            android:text="Easy"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/adventure_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Forrest"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="45sp" />

        <TextView
            android:id="@+id/adventure_lvl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/adventure_name"
            android:layout_alignParentStart="true"
            android:text="Lvl 1-10"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="30sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
